<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="SistemaChamadosWpf.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login"
        Width="560" Height="440"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <!-- Fundo: preto -> vermelho (mantendo seu gradiente) -->
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="Red" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <!-- Styles -->
    <Window.Resources>

        <!-- TextBox com placeholder via Tag -->
        <Style x:Key="WatermarkTextBox" TargetType="TextBox">
            <Setter Property="Margin" Value="0,6,0,12"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="10,4"/>
            <!-- Centraliza verticalmente o texto digitado -->
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <Border Background="#FFFFFF"
                                    BorderBrush="#E5E7EB"
                                    BorderThickness="1.2"
                                    CornerRadius="10"/>
                            <!-- Centraliza o conteúdo verticalmente -->
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Margin="10,0"
                                          VerticalAlignment="Center"/>
                            <TextBlock Margin="12,0,0,0"
                                       Foreground="#9CA3AF"
                                       IsHitTestVisible="False"
                                       VerticalAlignment="Center"
                                       Text="{TemplateBinding Tag}">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding Text, RelativeSource={RelativeSource TemplatedParent}}" Value=""/>
                                                    <Condition Binding="{Binding IsKeyboardFocused, RelativeSource={RelativeSource TemplatedParent}}" Value="False"/>
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </MultiDataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Botão primário (vermelho) -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Height" Value="38"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="root" CornerRadius="10" Background="#E11D48">
                            <ContentPresenter Margin="14,6" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="root" Property="Background" Value="#BE123C"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="root" Property="Background" Value="#9F1239"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="root" Property="Background" Value="#9CA3AF"/>
                                <Setter Property="Opacity" Value="0.85"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Botão secundário (ghost) -->
        <Style x:Key="GhostButton" TargetType="Button">
            <Setter Property="Height" Value="38"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Foreground" Value="#E11D48"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="root" CornerRadius="10"
                                Background="#00FFFFFF" BorderBrush="#E11D48" BorderThickness="1.2">
                            <ContentPresenter Margin="14,6" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="root" Property="Background" Value="#10E11D48"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="root" Property="Background" Value="#18E11D48"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <!-- Card central -->
    <Grid>
        <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
            <Border Background="White" CornerRadius="16" Padding="32" Width="420">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" BlurRadius="18" ShadowDepth="0" Opacity="0.25"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="12"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="16"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Logo (mantendo seu caminho atual) -->
                    <Image Source="/Assets/logo.png"
                       Height="52" Width="170" Margin="0,6,0,0"
                       HorizontalAlignment="Center" Stretch="Uniform"/>

                    <!-- Título -->
                    <TextBlock Grid.Row="2"
                           Text="Kyodesk"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#0F172A"
                           HorizontalAlignment="Center"/>

                    <!-- Form -->
                    <StackPanel Grid.Row="3" Margin="0,14,0,0">
                        <TextBox x:Name="EmailTextBox"
                             Style="{StaticResource WatermarkTextBox}"
                             Tag="Login"/>

                        <!-- Password com placeholder 'password' -->
                        <PasswordBox x:Name="SenhaBox"
                                 Height="38"
                                 Padding="10,4"
                                 Margin="0,6,0,12">
                            <PasswordBox.Template>
                                <ControlTemplate TargetType="PasswordBox">
                                    <Grid>
                                        <Border Background="#FFFFFF"
                                            BorderBrush="#E5E7EB"
                                            BorderThickness="1.2"
                                            CornerRadius="10"/>
                                        <!-- Centraliza o conteúdo do PasswordBox -->
                                        <ScrollViewer x:Name="PART_ContentHost"
                                                  Margin="10,0"
                                                  VerticalAlignment="Center"/>
                                        <!-- Placeholder -->
                                        <TextBlock Text="Password"
                                               Margin="12,0,0,0"
                                               Foreground="#9CA3AF"
                                               IsHitTestVisible="False"
                                               VerticalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                    <Style.Triggers>
                                                        <!-- Esconde ao focar -->
                                                        <DataTrigger Binding="{Binding IsKeyboardFocused, RelativeSource={RelativeSource TemplatedParent}}"
                                                                 Value="True">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>
                                </ControlTemplate>
                            </PasswordBox.Template>
                        </PasswordBox>
                    </StackPanel>

                    <!-- Ações -->
                    <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Sair"
                            Style="{StaticResource GhostButton}"
                            IsCancel="True"
                            Margin="0,0,10,0"
                            Click="Sair_Click"/>
                        <Button Content="Entrar"
                            Style="{StaticResource PrimaryButton}"
                            IsDefault="True"
                            Click="Entrar_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
