<Window x:Class="SistemaChamadosWpf.Views.NovoChamadoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Novo Chamado"
        Height="480" Width="580"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F4F5F7">

    <!-- ===== Recursos e Estilos ===== -->
    <Window.Resources>
        <!-- Paleta -->
        <SolidColorBrush x:Key="BrandRed"   Color="#E11D48"/>
        <SolidColorBrush x:Key="BrandBlack" Color="#111112"/>
        <SolidColorBrush x:Key="Card"       Color="#FFFFFF"/>
        <SolidColorBrush x:Key="CardBorder" Color="#E1E3E6"/>
        <SolidColorBrush x:Key="Muted"      Color="#6B7280"/>

        <!-- Gradiente do cabeçalho do card -->
        <LinearGradientBrush x:Key="HeaderGrad" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#111112" Offset="0"/>
            <GradientStop Color="#CB1B2B" Offset="1"/>
        </LinearGradientBrush>

        <!-- Estilo de rótulo acima dos campos -->
        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource Muted}"/>
            <Setter Property="Margin" Value="2,12,0,4"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- TextBox com ícone (Tag) e placeholder (ToolTip) -->
        <Style x:Key="InputWithIcon" TargetType="TextBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
            <!-- NOVO: centraliza o texto digitado -->
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid SnapsToDevicePixels="True">
                            <Border CornerRadius="10" Background="White"
                                    BorderBrush="{StaticResource CardBorder}"
                                    BorderThickness="1.2"/>
                            <Grid Margin="10,0,10,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="24"/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <!-- Ícone à esquerda -->
                                <TextBlock Grid.Column="0" VerticalAlignment="Center"
                                           FontFamily="Segoe MDL2 Assets"
                                           Foreground="#9CA3AF" FontSize="14"
                                           Text="{TemplateBinding Tag}"/>
                                <!-- Conteúdo -->
                                <ScrollViewer x:Name="PART_ContentHost" Grid.Column="2"
                                              VerticalAlignment="Center"/>
                                <!-- Placeholder -->
                                <TextBlock Grid.Column="2" Margin="2,0,0,0"
                                           Foreground="#9CA3AF" IsHitTestVisible="False"
                                           VerticalAlignment="Center"
                                           Text="{TemplateBinding ToolTip}">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding Text, RelativeSource={RelativeSource TemplatedParent}}" Value=""/>
                                                        <Condition Binding="{Binding IsKeyboardFocused, RelativeSource={RelativeSource TemplatedParent}}" Value="False"/>
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </MultiDataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBox multilinha (Descrição) -->
        <Style x:Key="MultilineBox" TargetType="TextBox">
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="TextWrapping"  Value="Wrap"/>
            <Setter Property="Height" Value="120"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid SnapsToDevicePixels="True">
                            <Border CornerRadius="10" Background="White"
                                    BorderBrush="{StaticResource CardBorder}"
                                    BorderThickness="1.2"/>
                            <ScrollViewer x:Name="PART_ContentHost" Margin="6,4,6,6"/>
                            <!-- Placeholder -->
                            <TextBlock Margin="12,10,0,0"
                                       Foreground="#9CA3AF" IsHitTestVisible="False"
                                       VerticalAlignment="Top"
                                       Text="{TemplateBinding ToolTip}">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding Text, RelativeSource={RelativeSource TemplatedParent}}" Value=""/>
                                                    <Condition Binding="{Binding IsKeyboardFocused, RelativeSource={RelativeSource TemplatedParent}}" Value="False"/>
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </MultiDataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Botões primário e secundário -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="MinWidth" Value="110"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="root" CornerRadius="10" Background="{StaticResource BrandRed}">
                            <ContentPresenter Margin="16,8"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="root" Property="Background" Value="#D0153F"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="root" Property="Background" Value="#B31237"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="root" Property="Background" Value="#9CA3AF"/>
                                <Setter Property="Opacity" Value="0.85"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="GhostButton" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="MinWidth" Value="110"/>
            <Setter Property="Foreground" Value="{StaticResource BrandRed}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="root" CornerRadius="10"
                                Background="#00FFFFFF"
                                BorderBrush="{StaticResource BrandRed}"
                                BorderThickness="1.2">
                            <ContentPresenter Margin="16,8"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="root" Property="Background" Value="#10E11D48"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="root" Property="Background" Value="#18E11D48"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- ===== Layout ===== -->
    <Grid Margin="18">
        <Border Background="{StaticResource Card}"
                BorderBrush="{StaticResource CardBorder}"
                BorderThickness="1"
                CornerRadius="14">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Opacity="0.18"
                                  BlurRadius="16" ShadowDepth="0"/>
            </Border.Effect>
            <Grid>
                <!-- Linhas: cabeçalho, formulário, botões -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Cabeçalho -->
                <Border Grid.Row="0"
                        Background="{StaticResource HeaderGrad}"
                        CornerRadius="14,14,0,0"
                        Padding="14">
                    <DockPanel>
                        <TextBlock FontFamily="Segoe MDL2 Assets"
                                   Text="&#xE710;" Foreground="White"
                                   Margin="0,0,8,0"/>
                        <TextBlock Text="Novo Chamado"
                                   Foreground="White" FontWeight="Bold"
                                   FontSize="16"/>
                    </DockPanel>
                </Border>

                <!-- Formulário -->
                <ScrollViewer Grid.Row="1" Margin="18,12,18,6"
                              VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Campo Título -->
                        <TextBlock Text="Título" Style="{StaticResource FieldLabel}"/>
                        <TextBox x:Name="TituloTextBox"
                                 Style="{StaticResource InputWithIcon}"
                                 Tag="&#xE70B;"
                                 ToolTip="Título do chamado"/>

                        <!-- Campo Descrição -->
                        <TextBlock Text="Descrição" Style="{StaticResource FieldLabel}"/>
                        <TextBox x:Name="DescricaoTextBox"
                                 Style="{StaticResource MultilineBox}"
                                 ToolTip="Descreva o problema, passos para reproduzir e impacto"/>

                        <!-- Campo Solicitante -->
                        <TextBlock Text="Solicitante" Style="{StaticResource FieldLabel}"/>
                        <TextBox x:Name="SolicitanteTextBox"
                                 Style="{StaticResource InputWithIcon}"
                                 Tag="&#xE77B;"
                                 ToolTip="Nome do solicitante"/>

                        <!-- Campo Classificação -->
                        <TextBlock Text="Classificação" Style="{StaticResource FieldLabel}"/>
                        <Border CornerRadius="10"
                                Background="White"
                                BorderBrush="{StaticResource CardBorder}"
                                BorderThickness="1.2"
                                Margin="0,0,0,4">
                            <ComboBox x:Name="ClassificacaoComboBox"
                                      Margin="8,0"
                                      Height="32"
                                      VerticalContentAlignment="Center"
                                      Background="Transparent"
                                      BorderThickness="0">
                                <ComboBoxItem Content="Baixa"/>
                                <ComboBoxItem Content="Média"/>
                                <ComboBoxItem Content="Alta"/>
                                <ComboBoxItem Content="Urgente"/>
                            </ComboBox>
                        </Border>

                        <!-- Campo Categoria -->
                        <TextBlock Text="Categoria" Style="{StaticResource FieldLabel}"/>
                        <Border CornerRadius="10"
                                Background="White"
                                BorderBrush="{StaticResource CardBorder}"
                                BorderThickness="1.2"
                                Margin="0,0,0,4">
                            <ComboBox x:Name="CategoriaComboBox"
                                      Margin="8,0"
                                      Height="32"
                                      VerticalContentAlignment="Center"
                                      Background="Transparent"
                                      BorderThickness="0">
                                <ComboBoxItem Content="Suporte Técnico"/>
                                <ComboBoxItem Content="Software"/>
                                <ComboBoxItem Content="Hardware"/>
                                <ComboBoxItem Content="Rede"/>
                                <ComboBoxItem Content="Outros"/>
                            </ComboBox>
                        </Border>
                    </StackPanel>
                </ScrollViewer>

                <!-- Botões -->
                <StackPanel Grid.Row="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="18,0,18,18">
                    <Button Content="Salvar"
                            Style="{StaticResource PrimaryButton}"
                            Margin="0,0,10,0"
                            Click="Salvar_Click"/>
                    <Button Content="Cancelar"
                            Style="{StaticResource GhostButton}"
                            Click="Cancelar_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
